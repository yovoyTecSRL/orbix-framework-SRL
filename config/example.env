# Orbix Framework - Variables de Entorno
# Copiar a .env y configurar con tus credenciales

# ====================
# General
# ====================
NODE_ENV=production
PORT=3000
APP_URL=https://tu-dominio.com

# ====================
# Base de Datos
# ====================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orbix
DB_USER=orbix
DB_PASSWORD=tu_password_seguro

# ====================
# Redis (Cach√©)
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_redis_password

# ====================
# Seguridad (Sentinel)
# ====================
JWT_SECRET=genera_un_secret_aleatorio_muy_largo_y_seguro
SESSION_SECRET=otro_secret_aleatorio_para_sesiones
ENCRYPTION_KEY=clave_de_cifrado_aes_256_bits

# ====================
# IA (AeNKI)
# ====================
# OpenAI
OPENAI_API_KEY=sk-tu-api-key-de-openai

# Hugging Face (alternativo)
HUGGINGFACE_API_KEY=tu-api-key-de-huggingface

# Azure OpenAI (alternativo)
AZURE_OPENAI_API_KEY=tu-azure-api-key
AZURE_OPENAI_ENDPOINT=https://tu-recurso.openai.azure.com/

# ====================
# Avatares - Voz
# ====================
# Google Cloud Text-to-Speech / Speech-to-Text
GOOGLE_CLOUD_API_KEY=tu-google-cloud-api-key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Amazon Polly / Transcribe
AWS_ACCESS_KEY_ID=tu-aws-access-key
AWS_SECRET_ACCESS_KEY=tu-aws-secret-key
AWS_REGION=us-east-1

# Azure Speech Services
AZURE_SPEECH_KEY=tu-azure-speech-key
AZURE_SPEECH_REGION=westus

# ElevenLabs (voz premium)
ELEVENLABS_API_KEY=tu-elevenlabs-api-key

# ====================
# Email (SMTP)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password

# SendGrid (alternativo)
SENDGRID_API_KEY=tu-sendgrid-api-key

# Amazon SES (alternativo)
AWS_SES_ACCESS_KEY=tu-ses-access-key
AWS_SES_SECRET_KEY=tu-ses-secret-key

# ====================
# SMS
# ====================
# Twilio
TWILIO_ACCOUNT_SID=tu-account-sid
TWILIO_AUTH_TOKEN=tu-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ====================
# WhatsApp Business
# ====================
WHATSAPP_API_KEY=tu-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=+1234567890

# ====================
# Notificaciones
# ====================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ====================
# OAuth Providers
# ====================
# Google OAuth
GOOGLE_CLIENT_ID=tu-google-client-id
GOOGLE_CLIENT_SECRET=tu-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=tu-github-client-id
GITHUB_CLIENT_SECRET=tu-github-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=tu-microsoft-client-id
MICROSOFT_CLIENT_SECRET=tu-microsoft-client-secret

# ====================
# Servicios de Pago
# ====================
STRIPE_SECRET_KEY=sk_test_tu-stripe-secret
STRIPE_PUBLISHABLE_KEY=pk_test_tu-stripe-public

# ====================
# Analytics
# ====================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=tu-mixpanel-token

# ====================
# Almacenamiento
# ====================
# AWS S3
S3_BUCKET=tu-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=tu-s3-access-key
S3_SECRET_KEY=tu-s3-secret-key

# ====================
# Monitoreo
# ====================
SENTRY_DSN=https://tu-sentry-dsn@sentry.io/proyecto
PROMETHEUS_PORT=9090

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ====================
# Features Flags
# ====================
ENABLE_AENKI=true
ENABLE_SENTINEL=true
ENABLE_DASHBOARDS=true
ENABLE_AVATARS=true
ENABLE_ANALYTICS=true
